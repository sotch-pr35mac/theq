<div class="container">
	<h1>Add Item</h1>
	<br>

	<h3>Device Details</h3>
	<form>
		<div class="form-group">
			<label for="deviceMake">Device Make</label>
			<input type="text" id="deviceMake" name="deviceMake" class="form-control" placeholder="Device Make">
		</div>
		<div class="form-group">
			<label for="deviceModel">Device Model</label>
			<input type="text" id="deviceModel" name="deviceModel" class="form-control" placeholder="Device Model">
		</div>
		<div class="form-group">
			<label for="repairType">Repair Type</label>
			<input type="text" id="repairType" name="repairType" class="form-control" placeholder="Repair Type">
		</div>
		<div class="form-group">
			<label for="repairLength">Repair Length (in hours)</label>
			<input type="number" id="repairLength" name="repairLength" class="form-control" placeholder="1">
		</div>
	</form>

	<br>

	<h3>Other Details</h3>
	<form>
		<div class="form-group">
			<label for="ticketNumber">Ticket Number</label>
			<input type="number" id="ticketNumber" name="ticketNumber" class="form-control" placeholder="9861">
		</div>
		<div class="form-group">
			<label for="promiseTime">Promsie Time</label>
			<div class="input-append date form_datetime" data-date="">
				<input size="16" type="text" value="" readonly id="promisetime" name="promisetime">
				<span class="add-on"><i class="icon-remove"></i></span>
				<span class="add-on"><i class="icon-th"></i></span>
			</div>
		</div>
	</form>
</div>

