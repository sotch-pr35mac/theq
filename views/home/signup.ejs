<% include parts/dependencies.ejs %>
<link rel="stylesheet" href="/styles/login.css">
<div class="container">
  <center>
    <div class="row">
      <img class="branding" src="/images/theq-white.png">
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="box">
          <div class="row">
            <h1>Sign Up</h1>
          </div>
          <form>
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></div>
                <input type="email" class="form-control" id="email" placeholder="Email">
                <div class="input-group-addon">@location-cpr.com</div>
              </div>
              <select id="location" class="form-control">
                <option>Locations</option>
                <option>-------------------</option>
                <% for(var i = 0; i < locations.length; i++) { %>
                  <option value="<%= i %>"><%= locations[i].location %></option>
                <% } %>
              </select>
              <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></div>
                <input type="password" class="form-control" id="password" placeholder="Password">
              </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Sign Up</button>
          </form>
            <footer>
              <h3>Already have an account?</h3>
              <a href="/login" class="btn btn-default btn-md btn-block">Login</a>
            </footer>
        </div>
      </div>
    </div>
  </center>
</div>
